<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character set and responsive design -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - RNG_Development</title>

    <!-- CSS links for Bootstrap, site-specific styles, and Font Awesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RNG_Development.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<style>
    /* Global styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        color: #333;
    }

    .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 0;
    }

    /* Navbar styles */
    .navbar {
        background: #000;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        width: 100%;
    }

    .logo img {
        height: 80px;
        width: auto;
    }

    .nav-links {
        list-style: none;
        display: flex;
    }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 1rem;
        }

    /* Mobile navigation styles */
    label {
        display: none;
    }

    #check {
        z-index: 3;
        display: none;
    }

    @@media (max-width: 960px) {
        .nav-links {
            display: none;
            flex-direction: column;
            align-items: center;
            width: 100%;
            position: absolute;
            top: 60px;
            left: 0;
            background: rgba(0, 0, 0, 0.9);
            padding: 20px 0;
        }

            .nav-links li {
                margin: 20px 0;
            }

        label {
            display: block;
            font-size: 25px;
            cursor: pointer;
        }

            label .close-btn {
                display: none;
            }

        #check:checked ~ .nav-links {
            display: flex;
        }

        #check:checked ~ label .menu-btn {
            display: none;
        }

        #check:checked ~ label .close-btn {
            display: block;
            position: absolute;
            top: 10px;
            right: 10px;
        }
    }

    /* Section styles */
    section {
        text-align: center;
        padding: 50px 20px;
        background: white;
        margin-bottom: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Service cards styles */
    .service-cards {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        justify-content: center;
        margin: 0 auto;
        max-width: 1200px;
    }

    .card {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .icon {
        font-size: 50px;
        color: #007BFF;
        margin-bottom: 15px;
        transition: color 0.3s ease;
    }

        .icon:hover {
            color: #0056b3;
        }

    h3 {
        font-size: 1.5em;
        margin-bottom: 15px;
    }

    p {
        font-size: 1em;
        color: #555;
    }

    /* Highlight text style */
    .highlight {
        color: #007BFF;
        font-weight: bold;
    }

    /* Contact CTA styles */
    .contact-cta {
        background: #333;
        color: white;
        padding: 50px;
        border-radius: 10px;
    }

        .contact-cta .btn {
            background: white;
            color: #333;
            padding: 12px 24px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.3s ease;
        }

            .contact-cta .btn:hover {
                background: #ddd;
            }

    /* Slideshow styles */
    .slideshow {
        position: relative;
        height: 50px;
        overflow: hidden;
    }

    .slide {
        position: absolute;
        width: 100%;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

        .slide:first-child {
            opacity: 1;
        }

    /* Why Choose Us section */
    .why-choose-us {
        text-align: center;
        margin: 40px auto;
        max-width: 1200px;
        padding: 40px 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .why-choose-us h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
        }

        .why-choose-us p {
            font-size: 1.2em;
            color: #555;
            margin-bottom: 40px;
        }

    .why-points {
        list-style: none;
        padding: 0;
        text-align: left;
        margin: 0 auto;
        max-width: 800px;
    }

        .why-points li {
            display: flex;
            align-items: center;
            font-size: 1em;
            margin-bottom: 15px;
        }

            .why-points li i {
                font-size: 1.5em;
                color: #007BFF;
                margin-right: 15px;
            }

            .why-points li p {
                margin: 0;
            }

            .why-points li strong {
                font-weight: bold;
            }

    /* Slideshow animation */
    @@keyframes slideShow {
        0% {
            opacity: 1;
        }

        40% {
            opacity: 1;
        }

        50% {
            opacity: 0;
        }

        100% {
            opacity: 0;
        }
    }

    .slide:nth-child(1) {
        animation: slideShow 12s infinite 0s;
    }

    .slide:nth-child(2) {
        animation: slideShow 12s infinite 4s;
    }

    .slide:nth-child(3) {
        animation: slideShow 12s infinite 8s;
    }

    /* Footer styles */
    footer {
        text-align: center;
        padding: 20px;
        background: black;
        color: white;
    }
</style>

<body>
    <!-- Header with navigation -->
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/">
                    <img src="~/image/logo.png" alt="RNG Development Logo">
                </a>
            </div>
            <!-- Mobile menu toggle -->
            <input type="checkbox" id="check">
            <label for="check">
                <i class="fas fa-bars menu-btn"></i>
                <i class="fas fa-times close-btn"></i>
            </label>
            <!-- Navigation links -->
            <ul class="nav-links">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="/Home/About">About</a></li>
                <li><a href="/Home/Services">Services</a></li>
                <li><a href="/Home/Contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <p>&copy; @DateTime.Now.Year RNG Development. All rights reserved.</p>
    </footer>

    <!-- JS libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Section for additional scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
