<!-- JavaScript to control modal open/close functionality -->
<script>
            document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.card');

        // Create an Intersection Observer
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                // If the card is in the viewport
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-view'); // Add the 'in-view' class
                    observer.unobserve(entry.target); // Stop observing the card after it has entered the viewport
                }
            });
        }, { threshold: 0.3 }); // 30% of the card should be visible to trigger the effect

        // Observe each card
        cards.forEach(card => {
            observer.observe(card);
        });
    });


    function openModal(modalId) {
        document.getElementById(modalId).style.display = "block";
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = "none";
    }

    // Close the modal if clicked outside the content area
    window.onclick = function(event) {
        var modals = document.querySelectorAll('.modal');
        modals.forEach(function(modal) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        });
    }
</script>
