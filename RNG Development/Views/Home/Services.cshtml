@{
    ViewData["Title"] = "Our Services - RNG Development";
}
<style>
    .services-hero {
        text-align: center;
        padding: 100px 20px;
        background: linear-gradient(to right, #000, #444);
        color: white;
    }

    .services-section {
        text-align: center;
        padding: 50px;
        background: white;
    }

    .services-grid {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .service-card {
        background: #f5f5f5;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        width: 250px;
        text-align: center;
    }

        .service-card img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
        }

    .cta-section {
        background: black;
        color: white;
        text-align: center;
        padding: 50px;
    }

        .cta-section .btn {
            background: white;
            color: black;
            padding: 10px 20px;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }
</style>
<header class="services-hero">
    <div class="services-content">
        <h1>Our Services</h1>
        <p>Innovative software solutions tailored to your business needs.</p>
    </div>
</header>

<section class="services-section">
    <div class="container">
        <h2>What We Offer</h2>
        <div class="services-grid">

            <div class="service-card">
                <img src="~/image/web-development.png" alt="Web Development">
                <h3>Web Development</h3>
                <p>We build fast, scalable, and responsive websites using the latest technologies.</p>
            </div>

            <div class="service-card">
                <img src="~/image/software-development.png" alt="Software Development">
                <h3>Custom Software</h3>
                <p>Tailored software solutions that fit your business requirements perfectly.</p>
            </div>

            <div class="service-card">
                <img src="~/image/cloud-solutions.png" alt="Cloud Solutions">
                <h3>Cloud Solutions</h3>
                <p>Secure and scalable cloud services to help you grow and innovate faster.</p>
            </div>

            <div class="service-card">
                <img src="~/image/it-consulting.png" alt="IT Consulting">
                <h3>IT Consulting</h3>
                <p>Expert advice and guidance to optimize your IT infrastructure and strategies.</p>
            </div>

        </div>
    </div>
</section>

<section class="cta-section">
    <div class="container">
        <h2>Let's Build Something Amazing!</h2>
        <p>Get in touch to discuss how we can help your business grow.</p>
        <a href="/Home/Contact" class="btn">Contact Us</a>
    </div>
</section>

