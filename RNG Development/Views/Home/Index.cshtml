@{
    ViewData["Title"] = "Welcome to RNG Development";
}

<style>
    /* ==== INTRO SECTION ==== */
    .intro-section-fullscreen {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        text-align: left;
        padding: 0 5%;
    }

    .intro-container-layout {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        max-width: 1200px;
        z-index: 2;
    }

    /* Left Background (Hidden on Small Screens) */
    .intro-section-fullscreen {
        background: linear-gradient(to right, #000 0%, #fff 100%);
    }


    @@keyframes intro-fade-in-left {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* ==== TEXT SECTION ==== */
    .intro-text-section h1 {
        font-size: 3rem;
        font-weight: bold;
        color: white;
        transition: color 0.3s ease-in-out;
    }

    .intro-text-section p {
        font-size: 1.4rem;
        margin-top: 10px;
        color: white;
    }

    .intro-highlight {
        font-weight: bold;
    }

    /* Image Section */
    .intro-image-section {
        width: 50%;
        text-align: center;
        opacity: 0;
        transform: scale(0.8);
        animation: intro-zoom-in 1.2s ease-out 1s forwards;
    }

        .intro-image-section img {
            width: 400px;
            max-width: 100%;
        }

    @@keyframes intro-zoom-in {
        from {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* ==== BUTTON STYLING ==== */
    .intro-explore-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 2px solid white;
        border-radius: 9999px;
        background-color: rgba(0, 0, 0, 1);
        padding: 0.625rem 1.5rem;
        text-align: center;
        color: rgba(255, 255, 255, 1);
        outline: 0;
        transition: all .2s ease;
        text-decoration: none;
        margin-top: 20px;
    }

        .intro-explore-button:hover {
            background-color: transparent;
            color: rgba(255, 255, 255, 1);
        }

    .intro-icon {
        height: 1.5rem;
        width: 1.5rem;
    }

    .intro-texts {
        margin-left: 1rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        line-height: 1;
    }

    .intro-text-1 {
        margin-bottom: 0.25rem;
        font-size: 0.75rem;
        line-height: 1rem;
        text-transform: uppercase;
    }

    .intro-text-2 {
        font-weight: 600;
        font-size: 1rem;
    }

    /* ==== MOBILE STYLES ==== */
    @@media (max-width: 768px) {
        .intro-section-fullscreen {
            flex-direction: column;
            text-align: center;
        }

        .intro-container-layout {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .intro-text-section {
            width: 100%;
            color: black;
            order: 1; /* Ensures text remains at the top */
        }

            .intro-text-section h1 {
                color: white;
            }

            .intro-text-section p {
                font-size: 1.4rem;
                margin-top: 10px;
                color: white;
            }

        .intro-image-section {
            width: 100%;
            margin-top: 20px;
            order: 2; /* Moves image below the text and button */
        }

        .intro-section-fullscreen .intro-left-bg {
            display: none;
        }

        .intro-explore-button:hover {
            background-color: black;
            color: white;
        }
    }
</style>

