    <p>Contact us and discover how we can revolutionize your business with our innovative solutions.</p>
    <a href="/Home/Contact" class="btn">Get in Touch</a>
</section>

<!-- Include Typed.js -->
<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
<script>
    var options = {
        strings: ["cutting-edge software solutions.", "custom software and cloud solutions.", "IT consulting and digital transformation."],
        typeSpeed: 50, // Speed of typing
        backSpeed: 30, // Speed of deleting
        backDelay: 2000, // Delay before deleting
        loop: true // Repeat indefinitely
    };

    var typed = new Typed("#typed-text", options);
</script>