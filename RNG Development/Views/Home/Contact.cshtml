@{
    ViewData["Title"] = "Contact Us - RNG Development";
}
<style>
    /* Keyframe animation for sliding in from the left */
    @@keyframes slideInLeft {
        0% {
            opacity: 0;
            transform: translateX(-100%);
        }

        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Styling for the contact box with animation */
    .contact-box {
        display: flex;
        background: grey;
        border-radius: 20px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        animation: slideInLeft 1s ease-out;
    }

    /* Styling for the left container with form */
    .container-left {
        flex: 1;
        padding: 40px;
        background: #ffffff;
        border-radius: 20px 0 0 20px;
        margin-right: 10px;
        animation: slideInLeft 1s ease-out;
    }

    /* Styling for the right container with iframe (location) */
    .container-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0 20px 20px 0;
        overflow: hidden;
        animation: slideInLeft 1s ease-out;
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    h3 {
        text-align: center;
        font-weight: bold;
        text-decoration: underline;
        margin-bottom: 20px;
    }

    .input-group {
        margin-bottom: 15px;
    }

    input, textarea {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    button {
        width: 100%;
        padding: 10px;
        background: #000;
        color: #fff;
        border-radius: 8px;
        border: none;
        cursor: pointer;
    }

        button:hover {
            background: #333;
        }

    /* Keyframe for Text Animation (heading and paragraph from left) */
    @@keyframes slideInTextFromLeft {
        0% {
            opacity: 0;
            transform: translateX(-100%);
        }

        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    h1 {
        animation: slideInTextFromLeft 1s ease-out;
    }

    p {
        animation: slideInTextFromLeft 1.5s ease-out;
    }

    @@media (max-width: 768px) {
        .contact-box {
            flex-direction: column;
        }

        .container-left, .container-right {
            border-radius: 20px;
        }

        .container-left {
            margin-bottom: 15px; /* Adds space between form and iframe on smaller screens */
        }

        .container-right {
            margin-top: 15px; /* Adds space above iframe on smaller screens */
        }
    }
</style>

<div style="font-family: Arial, sans-serif; text-align: center; background-color: #f8f9fa; padding: 50px;">

    <h1 style="font-size: 32px; font-weight: bold; color: dimgrey;">
        <span style="color: black;">Get in Touch</span> – We're Here to Assist You!
    </h1>

    <p style="font-size: 18px; color: #555; margin-top: 10px;">
        Have questions or ideas? Get in touch with our team today and let’s bring your vision to life!
    </p>

</div>

<div class="contact-box">
    <div class="container-left">
        <form id="contactForm" onsubmit="return validateForm()">
            <div class="input-group">
                <label>Name*</label>
                <input type="text" id="name" placeholder="Enter your Name" required>
            </div>
            <div class="input-group">
                <label>Email*</label>
                <input type="email" id="email" placeholder="youremail@gmail.com" required>
            </div>
            <div class="input-group">
                <label>Phone</label>
                <input type="text" id="phone" placeholder="+27 78 938 5751">
            </div>
            <div class="input-group">
                <label>Message*</label>
                <textarea id="message" rows="5" placeholder="Enter your Message" required></textarea>
            </div>
            <button type="submit">Send Message</button>
        </form>
    </div>
    <div class="container-right">
        <iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d1169.7654704510792!2d25.64753893323132!3d-33.97721211093536!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sdolphin%20leap%20conference%20centre%20port%20elizabeth!5e0!3m2!1sen!2sza!4v1738871478103!5m2!1sen!2sza"
                allowfullscreen
                loading="lazy">
        </iframe>
    </div>
</div>

<script>
    function validateForm() {
        var name = document.getElementById('name').value;
        var email = document.getElementById('email').value;
        var message = document.getElementById('message').value;

        if (name.trim() == '' || email.trim() == '' || message.trim() == '') {
            alert('Please fill in all required fields.');
            return false;
        }
        return true;
    }
</script>
