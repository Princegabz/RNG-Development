@{
    ViewData["Title"] = "Contact Us - RNG Development";
}
<style>

    .contact-hero {
        text-align: center;
        padding: 100px 20px;
        background: linear-gradient(to right, #000, #444);
        color: white;
    }

    .contact-section {
        text-align: center;
        padding: 50px;
        background: white;
    }

    .contact-info {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

        .contact-form input, .contact-form textarea {
            width: 80%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .contact-form button {
            background: black;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }

            .contact-form button:hover {
                background: #333;
            }

    .map-section {
        text-align: center;
        padding: 50px;
        background: #f5f5f5;
    }

    footer {
        text-align: center;
        padding: 20px;
        background: black;
        color: white;
    }


</style>
<header class="contact-hero">
    <div class="contact-content">
        <h1>Contact RNG Development</h1>
        <p>We'd love to hear from you. Let's build something amazing together!</p>
    </div>
</header>

<section class="contact-section">
    <div class="container">
        <h2>Get in Touch</h2>
        <p>Feel free to reach out to us for any inquiries or business opportunities.</p>

        <div class="contact-info">
            <p><strong>Email:</strong> contact@rngdevelopment.com</p>
            <p><strong>Phone:</strong> +27 78 938 5751</p>
            <p><strong>Address:</strong> Dolphin Leap Centre, Port Elizabeth</p>
        </div>

        <form class="contact-form">
            <label for="name">Name</label>
            <input type="text" id="name" placeholder="Your Name" required>

            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Your Email" required>

            <label for="message">Message</label>
            <textarea id="message" placeholder="Your Message" rows="5" required></textarea>

            <button type="submit">Send Message</button>
        </form>
    </div>
</section>

<section class="map-section">
    <h2>Find Us Here</h2>
    <iframe width="100%"
            height="400"
            frameborder="0"
            style="border:0"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d1169.7654704510792!2d25.64753893323132!3d-33.97721211093536!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sdolphin%20leap%20conference%20centre%20port%20elizabeth!5e0!3m2!1sen!2sza!4v1738871478103!5m2!1sen!2sza">
    </iframe>
</section>


